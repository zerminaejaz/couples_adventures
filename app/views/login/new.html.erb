<% if  flash[:errors]%>
    <% flash[:errors].each do |message| %>
        <p><%= message %></p>
    <%end%>
<%end%>

<%=  form_tag login_index_path do %>
    <ul>
    <li>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
    </li>
    <li>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </li>
    </ul>
    <%= submit_tag "Log in" %>
<%end%>

