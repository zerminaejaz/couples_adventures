
<div class = "container">
    <div class = "row text-center">
        <div class = "col col-md-2"> </div>
        <div class = "col col-md-8">
        <h1>Welcome to Couple's Adventures!</h1>
        </div>
        <div class = "col col-md-2"> </div>
    </div>
    <div class = "row text-center">
        <div class = "col col-md-2"> </div>
        <div class= "col col-md-8 text-center">
            <h2>Account Login</h2>
                 <%=  form_tag login_index_path do %>
                    <%= label_tag :name %>
                    <%= text_field_tag :name %>
                    <%= label_tag :password %>
                    <%= password_field_tag :password %>
                    <%= submit_tag "Log in" %>
                 <%end%>
        </div>
        <div class = "col col-md-2"> </div>
    </div>
    <div class = "row text-center">
        <div class = "col col-md-2"> </div>
        <div class = "col col-md-8">
                <h2><%= link_to "Create Account", new_user_path %></h2>
        </div>
        <div class = "col col-md-2"> </div>
    </div>
</div>