<div class ="container">

    <div class = "row text-center">
        <div class = "col col-md-12">
            <h1> <%= @album.name %></h1>
        </div>
    </div>
    <div class = "row text-center">
        <% @album.pictures.map do |picture| %>
            <div class = "col col-md-4">
                <%= picture.date %>
                <br>
                <a href="<%=picture_path(picture)%>%">
                <img src= "<%= picture.url %>" style="width:100px;height:auto" />
                </a>
                <%= button_to "Delete", picture, method: :delete%>
                <br>
            </div>
        <%end%>
    </div>

    <div class = "row text-center">
        <div class = "col col-md-12">
            <h1>~~~~~~~~~~~~~~~~~~~~~~~~~~~~</h1>
            <%= form_for @picture do |f|%>
            <%= f.hidden_field :album_id, value: @album.id%>
                <%= f.label :date %>
                <%= f.date_field :date %>
                <br>
                <%= f.label :url %>
                <%= f.text_field :url %>
                <br>
                <%= f.submit "Add Picture to Album" %>
            <%end%>
        </div>
    </div>
</div>