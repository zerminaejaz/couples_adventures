<h1> <%= @album.name %></h1>

<%# <%= button_to "Add Picture", new_picture_path, method: :get%>

<% @album.pictures.map do |picture| %>
    <%= picture.date %>
    <br>
    <a href="<%=picture_path(picture)%>%">
    <img src= <%= picture.url %> style="width:100px;height:auto" />
    </a>
    <%= button_to "Delete", picture, method: :delete%>
    <br>
<%end%>


<h3> Add A New Picture To Your Album! </h3>

<%= form_for @picture do |f|%>
<%= f.hidden_field :album_id, value: @album.id%>
    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.submit "Add Picture" %>
<%end%>
