<% if  flash[:errors]%>
    <% flash[:errors].each do |message| %>
        <h3><%= message %></h3>
    <%end%>
<%end%>

<h1> Add A New Picture To Your Album! </h1>

<%= form_for @picture do |f|%>
    <%= f.hidden_field :album_id, value: @logged_in_user.albums.first.id%>
    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :url %>
    <%= f.text_field :url %>
    
    <%= f.label :album_id %>
    <%= f.collection_select :album_id, @logged_in_user.albums.all, :id, :name %>

    <%= f.submit "Add Picture" %>
<%end%>