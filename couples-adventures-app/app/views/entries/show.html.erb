<div class = "container" style= "margin-top: 5%">
    <div class = "row text-center" style = "margin-bottom: 5%">
        <div class = "col col-md-2"> </div>
        <div class = "col col-md-8"><h1> <%= @entry.title %></h1>
            <a href= <%= picture_path(@entry.picture)%>> 
                <img src= "<%= @entry.picture.url %>" width = 40% height = 40% style = "margin-bottom: 2%"/> 
            </a>
            <p> <%= @entry.date %> </p>
        
            <p> <%= @entry.description %></p>

            <p style = "margin-bottom: 4%"><%= button_to "Edit this Memory", edit_entry_path, method: :get%><p>
            <p style = "margin-bottom: 4%" ><%= button_to "Delete this Memory", @entry, method: :delete%><p>
        </div>
        <div class = "col col-md-2"> </div>
    </div>
</div>